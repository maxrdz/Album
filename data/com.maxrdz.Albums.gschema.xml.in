<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="@APP_ID@" path="@GRESOURCE_DOMAIN@/" gettext-domain="@GETTEXT_DOMAIN@">
    <key name="window-width" type="i">
      <default>1200</default>
      <summary>Window width state</summary>
    </key>
    <key name="window-height" type="i">
      <default>800</default>
      <summary>Window height state</summary>
    </key>
    <key name="maximized" type="b">
      <default>false</default>
      <summary>Window maximized state</summary>
    </key>
    <key name="active-view" type="s">
      <default>"library"</default>
      <summary>State of the current view stack page visible</summary>
    </key>
    <key name="fresh-cache" type="b">
      <default>true</default>
      <summary>Cache Cleared Flag</summary>
      <description>
        Set to 'false' after Albums populates its cache directory.
      </description>
    </key>
    <key name="library-collection-paths" type="as">
      <default>[]</default>
      <summary>Folders for the Library Collection</summary>
      <description>
        A string array of absolute paths that are used as root
        directory lists for the application's library list model
        implementation to enumerate media items from.
      </description>
    </key>
    <key name="hardware-acceleration" type="b">
      <default>false</default>
      <summary>Toggle Hardware Acceleration</summary>
      <description>
        Enables the use of hardware acceleration with FFmpeg.
        This is an experimental feature.
      </description>
    </key>
  </schema>
</schemalist>
