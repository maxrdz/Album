<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>@APP_ID@</id>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>GPL-3.0-or-later</project_license>
  <name>Album</name>
  <summary>A photo and video album application for GNOME.</summary>
	<description>
	  <p>A free and open source photo/video album app for Linux mobile,
  built with GTK4 and libadwaita, designed to be well integrated with
  GNOME technologies and mobile devices.</p>
	</description>
  <url type="homepage">@PROJECT_GIT@</url>
  <url type="bugtracker">@PROJECT_GIT@/-/issues</url>
  <translation type="gettext">@GETTEXT_DOMAIN@</translation>
  <developer_name>Max Rodriguez</developer_name>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <provides>@APP_ID@.desktop</provides>
  <requires>
    <display_length>360</display_length>
  </requires>
  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>
  <custom>
    <value key="Purism::form_factor">workstation</value>
    <value key="Purism::form_factor">mobile</value>
  </custom>
</component>
