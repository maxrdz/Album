<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="LibraryView" parent="AdwBin">
    <property name="child">
      <object class="AdwViewStack" id="library_view_stack">
        <child>
          <object class="AdwViewStackPage" id="spinner_page">
            <property name="name">spinner_page</property>
            <property name="child">
              <object class="GtkSpinner">
                <property name="valign">center</property>
                <property name="halign">center</property>
                <property name="vexpand">True</property>
                <property name="spinning">True</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="AdwViewStackPage" id="gallery_page">
            <property name="name">gallery_page</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="child">
                  <object class="GtkGridView" id="photo_grid_view">
                    <property name="max-columns">5</property>
                    <property name="min-columns">5</property>
                    <property name="orientation">horizontal</property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
        <property name="visible-child-name">spinner_page</property>
      </object>
    </property>
  </template>
</interface>
