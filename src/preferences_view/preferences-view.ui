<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PreferencesView" parent="AdwBreakpointBin">
    <property name="width-request">300</property>
    <property name="height-request">200</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>min-width: 720px</condition>
        <setter object="theme_selector" property="visible">False</setter>
        <setter object="mobile_actions_flowbox" property="visible">False</setter>
      </object>
    </child>
    <property name="child">
      <object class="GtkListBox">
        <!-- GTK_SELECTION_NONE == 0 -->
        <property name="selection-mode">0</property>
        <style>
          <class name="transparent_list_box"/>
        </style>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Preferences</property>
            <property name="lines">1</property>
            <property name="single-line-mode">True</property>
            <property name="margin-top">10</property>
            <property name="margin-bottom">10</property>
            <!-- GTK_JUSTIFY_CENTER == 2 -->
            <property name="justify">2</property>
            <!-- NOTE: CSS nodes from libadwaita css stylesheets -->
            <style>
              <class name="title"/>
              <class name="title-1"/>
            </style>
          </object>
        </child>
        <child>
          <object class="ThemeSelector" id="theme_selector"/>
        </child>
        <child>
          <object class="GtkFlowBox" id="mobile_actions_flowbox">
            <property name="homogeneous">True</property>
            <property name="max-children-per-line">2</property>
            <child>
              <object class="GtkButton">
                <property name="label" translatable="yes">About Album</property>
                <property name="action-name">app.about</property>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="label" translatable="yes">Quit</property>
                <property name="action-name">app.quit</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesPage">
            <property name="height-request">400</property>
            <property name="vexpand-set">True</property>
            <property name="vexpand">True</property>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Album Configuration</property>
                <property name="description" translatable="yes">Here you can find the main preferences for Album.</property>
                <child>
                  <object class="AdwActionRow">
                    <property name="title" translatable="yes">User Album Directory</property>
                    <property name="subtitle" translatable="yes">Select your user's photo/video album directory.</property>
                    <child type="suffix">
                      <object class="GtkButton">
                        <property name="margin-top">5</property>
                        <property name="margin-bottom">5</property>
                        <property name="child">
                          <object class="AdwButtonContent">
                            <property name="icon-name">document-open-symbolic</property>
                            <property name="label" translatable="yes">Choose</property>
                            <property name="use-underline">True</property>
                          </object>
                        </property>
                        <property name="action-name">app.choose-album-directory</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwSwitchRow">
                    <property name="title" translatable="yes">Auto-Play Videos and Live Photos</property>
                    <property name="action-name">app.configure</property>
                    <property name="action-target">0</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
