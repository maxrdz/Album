<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <!-- Widget from https://github.com/sonnyp/troll/blob/94ced56f1b08e6955f6c8325a04c74736d39b823/src/widgets/ThemeSelector.blp-->
  <!-- Licensed under the ISC License. -->
  <template class="ThemeSelector" parent="AdwBin">
    <style>
      <class name="themeselector"/>
    </style>
    <property name="hexpand">true</property>
    <property name="child">
      <object class="GtkBox" id="selector_box">
        <property name="hexpand">true</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkCheckButton" id="follow">
            <property name="tooltip-text" translatable="yes">Follow system theme</property>
            <accessibility>
              <property name="label" translatable="true">Follow system theme</property>
            </accessibility>
            <style>
              <class name="theme-selector"/>
              <class name="follow"/>
            </style>
            <property name="hexpand">true</property>
            <property name="halign">center</property>
            <property name="focus-on-click">false</property>
            <property name="action-name">app.system-theme</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton">
            <property name="tooltip-text" translatable="yes">Light theme</property>
            <accessibility>
              <property name="label" translatable="true">Light theme</property>
            </accessibility>
            <style>
              <class name="theme-selector"/>
              <class name="light"/>
            </style>
            <property name="group">follow</property>
            <property name="hexpand">true</property>
            <property name="halign">center</property>
            <property name="focus-on-click">false</property>
            <property name="action-name">app.light-theme</property>
          </object>
        </child>
        <child>
          <object class="GtkCheckButton">
            <property name="tooltip-text" translatable="yes">Dark theme</property>
            <accessibility>
              <property name="label" translatable="true">Dark theme</property>
            </accessibility>
            <style>
              <class name="theme-selector"/>
              <class name="dark"/>
            </style>
            <property name="group">follow</property>
            <property name="hexpand">true</property>
            <property name="halign">center</property>
            <property name="focus-on-click">false</property>
            <property name="action-name">app.dark-theme</property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
