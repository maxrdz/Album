<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="LibraryView" parent="AdwBin">
    <property name="child">
      <object class="AdwViewStack" id="library_view_stack">
        <child>
          <object class="AdwViewStackPage" id="spinner_page">
            <property name="name">spinner_page</property>
            <property name="child">
              <object class="AdwClamp">
                <property name="orientation">vertical</property>
                <property name="maximum-size">75</property>
                <property name="child">
                  <object class="GtkListBox">
                    <style>
                      <class name="spinner_page_list_box"/>
                    </style>
                    <property name="vexpand">True</property>
                    <property name="sensitive">False</property>
                    <child>
                      <object class="GtkListBoxRow">
                        <property name="child">
                          <object class="GtkSpinner">
                            <property name="width_request">32</property>
                            <property name="height_request">32</property>
                            <property name="valign">center</property>
                            <property name="halign">center</property>
                            <property name="vexpand">True</property>
                            <property name="hexpand">True</property>
                            <property name="spinning">True</property>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBoxRow">
                        <property name="child">
                          <object class="GtkLabel">
                            <attributes>
                              <attribute name="weight" value="PANGO_WEIGHT_BOLD"/>
                            </attributes>
                            <property name="label" translatable="yes">Loading your library..</property>
                            <property name="selectable">False</property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="AdwViewStackPage" id="gallery_page">
            <property name="name">gallery_page</property>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="child">
                  <object class="GtkGridView" id="photo_grid_view">
                    <property name="max-columns">5</property>
                    <property name="min-columns">5</property>
                    <property name="orientation">horizontal</property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
        <property name="visible-child-name">spinner_page</property>
      </object>
    </property>
  </template>
</interface>
