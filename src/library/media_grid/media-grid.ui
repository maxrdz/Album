<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="MrsMediaGridView" parent="AdwBreakpointBin">
    <property name="width-request">360</property>
    <property name="height-request">150</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>min-width: 720px</condition>
        <setter object="main_menu" property="visible">False</setter>
        <setter object="overlay_header_buttons" property="margin-end">20</setter>
        <setter object="photo_grid_view" property="min-columns">15</setter>
        <setter object="photo_grid_view" property="max-columns">15</setter>
        <setter object="overlay_labels_box" property="margin-start">20</setter>
        <setter object="overlay_labels_box" property="margin-top">10</setter>
        <!-- See src/globals.rs for corresponding `grid-widget-height` to grid columns. -->
        <setter object="MrsMediaGridView" property="grid-widget-height">78</setter>
        <setter object="MrsMediaGridView" property="grid-desktop-zoom">True</setter>
      </object>
    </child>
    <property name="child">
      <object class="AdwToastOverlay" id="toast_overlay">
        <property name="child">
          <object class="GtkOverlay">
            <child type="overlay">
              <object class="GtkFrame">
                <property name="valign">start</property>
                <property name="can-target">False</property>
                <property name="height-request">200</property>
                <style>
                  <class name="overlay-gradient"/>
                </style>
              </object>
            </child>
            <child type="overlay">
              <object class="GtkBox" id="overlay_labels_box">
                <property name="can-target">False</property>
                <property name="halign">start</property>
                <property name="valign">start</property>
                <property name="margin-start">15</property>
                <property name="margin-top">15</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel" id="time_period_label">
                    <property name="label" translatable="yes">Loading</property>
                    <!-- NOTE: CSS from GTK stylesheets -->
                    <style>
                      <class name="title"/>
                      <class name="title-2"/>
                      <class name="force-light"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="total_items_label">
                    <property name="label" translatable="yes">Enumerating Items</property>
                    <property name="halign">start</property>
                    <property name="valign">start</property>
                    <!-- NOTE: CSS from GTK stylesheets -->
                    <style>
                      <class name="title"/>
                      <class name="title-5"/>
                      <class name="force-light"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child type="overlay">
              <object class="GtkBox" id="overlay_header_buttons">
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>
                <property name="homogeneous">True</property>
                <property name="valign">start</property>
                <property name="halign">end</property>
                <property name="margin-end">15</property>
                <property name="margin-top">20</property>
                <child>
                  <object class="GtkMenuButton" id="photo_grid_controls">
                    <property name="tooltip-text">Grid Controls</property>
                    <property name="icon-name">view-grid-symbolic</property>
                    <property name="popover">
                      <object class="GtkPopoverMenu">
                        <property name="child">
                          <object class="GtkScrolledWindow">
                            <property name="height-request">70</property>
                            <property name="child">
                              <object class="GtkViewport">
                                <property name="child">
                                  <object class="GtkStack">
                                    <child>
                                      <object class="GtkStackPage">
                                        <property name="name">main</property>
                                        <property name="child">
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <property name="homogeneous">True</property>
                                            <child>
                                              <object class="GtkButton" id="zoom_in">
                                                <property name="child">
                                                  <object class="AdwButtonContent">
                                                    <property name="halign">start</property>
                                                    <property name="margin-start">10</property>
                                                    <property name="icon-name">zoom-in-symbolic</property>
                                                    <property name="label" translatable="yes">Zoom _In</property>
                                                    <property name="use-underline">True</property>
                                                  </object>
                                                </property>
                                                <signal name="clicked" handler="zoom_in_callback" swapped="true"/>
                                                <style>
                                                  <class name="menu-button"/>
                                                </style>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkButton" id="zoom_out">
                                                <property name="child">
                                                  <object class="AdwButtonContent">
                                                    <property name="halign">start</property>
                                                    <property name="margin-start">10</property>
                                                    <property name="icon-name">zoom-out-symbolic</property>
                                                    <property name="label" translatable="yes">Zoom _Out</property>
                                                    <property name="use-underline">True</property>
                                                  </object>
                                                </property>
                                                <signal name="clicked" handler="zoom_out_callback" swapped="true"/>
                                                <style>
                                                  <class name="menu-button"/>
                                                </style>
                                              </object>
                                            </child>
                                          </object>
                                        </property>
                                      </object>
                                    </child>
                                  </object>
                                </property>
                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </property>
                    <style>
                      <class name="circular"/>
                      <class name="force-light"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkMenuButton" id="main_menu">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="tooltip_text" translatable="yes">Main Menu</property>
                    <property name="primary">True</property>
                    <property name="popover">
                      <object class="GtkPopoverMenu" id="primary_menu">
                        <property name="menu-model">primary_menu_model</property>
                      </object>
                    </property>
                    <style>
                      <class name="circular"/>
                      <class name="force-light"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <property name="child">
              <object class="GtkScrolledWindow">
                <property name="kinetic-scrolling">True</property>
                <property name="child">
                  <object class="GtkGridView" id="photo_grid_view">
                    <property name="min-columns">5</property>
                    <property name="max-columns">5</property>
                    <property name="orientation">vertical</property>
                    <property name="single-click-activate">True</property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
  <menu id="primary_menu_model">
    <section>
      <item>
        <attribute name="custom">theme-selector</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">win.settings</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Memories</attribute>
        <attribute name="action">app.about</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Quit</attribute>
        <attribute name="action">app.quit</attribute>
      </item>
    </section>
  </menu>
</interface>
