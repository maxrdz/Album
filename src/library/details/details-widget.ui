<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="AlbumsDetails" parent="AdwBin">
    <property name="child">
      <object class="GtkScrolledWindow">
        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">24</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">15</property>
            <property name="margin-end">15</property>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Image Information</property>
                <child>
                  <object class="AdwActionRow" id="format">
                    <property name="title" translatable="yes">Format</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="dimensions">
                    <property name="title" translatable="yes">Dimensions</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">File Metadata</property>
                <child>
                  <object class="AdwActionRow" id="folder">
                    <property name="title" translatable="yes">Folder</property>
                    <property name="activatable-widget">folder_button</property>
                    <child type="suffix">
                      <object class="GtkButton" id="folder_button">
                        <property name="valign">center</property>
                        <property name="icon-name">folder-open-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Open Folder</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="size">
                    <property name="title" translatable="yes">Size</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="created">
                    <property name="title" translatable="yes">Created</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="modified">
                    <property name="title" translatable="yes">Modified</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Camera Information</property>
                <child>
                  <object class="AdwActionRow" id="timestamp">
                    <property name="title" translatable="yes" comments="'Time taken' referring to the time the picture was taken.">Time Taken</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="aperture">
                    <property name="title" translatable="yes">Aperture</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="exposure">
                    <property name="title" translatable="yes">Exposure</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="iso">
                    <property name="title" translatable="yes">ISO</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="focal_length">
                    <property name="title" translatable="yes">Focal Length</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="make_model">
                    <property name="title" translatable="yes" context="Camera/Phone">Maker and Model</property>
                    <property name="subtitle-selectable">True</property>
                    <style>
                      <class name="property"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
